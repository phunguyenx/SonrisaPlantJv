<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_plant_home"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_wishlist"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/icons8_heart_36"
        app:layout_constraintEnd_toEndOf="@+id/img_plant_home"
        app:layout_constraintTop_toTopOf="@+id/img_plant_home" />
    <TextView
        android:padding="4dp"
        android:id="@+id/tv_name_plant_home"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:text="Name Plant"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_plant_home" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icons8_star_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_plant_home" />

    <TextView
        android:id="@+id/tv_rating_point_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:text="5.0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_plant_home" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textAlignment="center"
        android:textColor="@color/green_app_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/tv_rating_point_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_plant_home" />

    <TextView
        android:id="@+id/tv_quantity_sold_home"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:background="@drawable/round_text_view"
        android:text="1000 sold"
        android:textSize="12sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/green_app_light"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_plant_home" />

    <TextView
        android:padding="4dp"
        android:id="@+id/tv_plant_price_home"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="29$"
        android:textColor="@color/green_app_light"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>